						self:SetAlpha(0.25);
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
						if self.phase == "" then
							GameTooltip:SetText(format("%s 1-%d", ROLL, self.rollMax));
						else
							GameTooltip:SetText(format("%s for |cFF00FF00%s|r (1-%d)", ROLL, self.phase, self.rollMax));
